FROM node:13.7.0 as build

WORKDIR /app
COPY package.json package-lock.json ./
RUN npm install
COPY . /app

ARG REACT_APP_SERVER_PORT
ENV REACT_APP_SERVER_PORT=${REACT_APP_SERVER_PORT}

ARG REACT_APP_SECURITY_UNAME
ENV REACT_APP_SECURITY_UNAME=${REACT_APP_SECURITY_UNAME}

ARG REACT_APP_SECURITY_PWD
ENV REACT_APP_SECURITY_PWD=${REACT_APP_SECURITY_PWD}

RUN npm run build

FROM nginx:1.17.8

EXPOSE 80
COPY --from=build /app/build /usr/share/nginx/html

ENTRYPOINT ["nginx","-g","daemon off;"]